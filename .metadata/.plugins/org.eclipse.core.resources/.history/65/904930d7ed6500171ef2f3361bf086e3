$(document).ready(function(){
	var curIndex=0;
	//时间间隔(单位毫秒)，每秒钟显示一张，数组共有5张图片放在Photos文件夹下。
	//var timeInterval=3000;
	var arr=new Array();
	arr[0]="pic/1.jpg";
	arr[1]="pic/2.jpg";
	arr[2]="pic/3.jpg";
	arr[3]="pic/4.jpg";
	//alert("te"); 
	//初始化定时器
	var timer=null;
	if(timer){              
		clearInterval(timer);  
		timer=null;
	}
	timer = setInterval(autoPlay,2500);
	function autoPlay(){
	    if (curIndex==arr.length-1) 
	    {
	        curIndex=0;
	    }
	    else
	    {
	        curIndex+=1;
	    }
	    //调用变换处理函数
	    changeImg(curIndex);  
	  }
	$("#top").mouseover(function(){
		//alert("te");
		clearInterval(timer);
	});
	$("#top").mouseout(function(){
		//alert("te");
		timer = setInterval(autoPlay,2500);
	});
	alert(arr.length);
	for(var i=0;i<arr.length;i++){
		var li=document.getElementById("indexList").getElementsByTagName("li");
		li[i].onmouseover=function(){
			clearInterval(timer);
			changeImg($(this).index());
			//alert($(this).index());
		}
	}
	function changeImg(num)
	{
		try{
			var liarr=document.getElementById("indexList").getElementsByTagName("li");
			var n=num-1;
			if(n<0){
				n=3;
			}
			liarr[n].style.backgroundImage="url(pic/indexbg.png)";
			liarr[num].style.backgroundImage="url(pic/indexs.png)";
		}catch(err){
			alert(err.message);	
		}
	    var obj=document.getElementById("obj");
	    obj.src=arr[num];
	} 
	//alert("te"); 
});

</script>
